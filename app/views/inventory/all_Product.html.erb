<h1>All Products</h1>

<table>
	<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Price</th>
			<th>Category</th>
		</tr>
	</thead>

	<tbody>
		<% @products.each do |product| %>
			<tr>
			<td><%= product.id %></td>
			<td><%= link_to product.name,product_path(id: product.id) %></td>
			<td><%= number_to_currency(product.price) %></td>
			<td><%= link_to product.category, category_path(category: product.category) %></td></tr>
		<% end %>
	</tbody>
</table>




